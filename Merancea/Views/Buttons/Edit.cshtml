@model Merancea.Models.Button

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Button</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ButtonId" />
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Attribute" class="control-label"></label>
                <input asp-for="Attribute" class="form-control" />
                <span asp-validation-for="Attribute" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label class="control-label">Table of Contents</label>
                <select asp-for="PageId" class="form-control" asp-items="ViewBag.PageId"></select>
                <span asp-validation-for="PageId" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@Model.ButtonId">Delete</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
